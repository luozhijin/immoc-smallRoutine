<block wx:if="{{type === 'recommend'}}">
  <!-- 幻灯片 -->
  <swiper
    previous-margin="18rpx"
    next-margin="18rpx"
    circular="{{true}}"
    autoplay="{{true}}"
    class="swiper"
  >
    <swiper-item class="swiper-item"
      wx:for="{{swiperList}}"
      class="swiper-item"
      wx:key="*this"
    >
      <image class="swiper-image"
        src="{{item.imgUrl}}" 
      >
      </image>
    </swiper-item>
  </swiper>
  <!-- 实战推荐 -->
  <view class="project">
    <view class="project-title-item">
      <navigator url="/pages/hot/hot">
        <view class="project-title" >实战推荐</view>
        <image class="project-title-gray" 
        src = "../../resources/arrow-gray-arrow-gray.png">
        </image>
      </navigator>
    </view>
      <view
        class="project-empty"
        hidden="{{!(searchList && searchList.length == 0)}}"
      >无搜索结果</view>
      <view
        class="project-item"
        wx:for="{{searchList ? searchList : courses}}"
        wx:key="*this"
        bindtap="handleCourseTap"
      >
      <image
        class="project-item-pic"
        src="{{item.imgUrl}}"
      />
      <view class="project-item-content">
        <view class="project-item-title">
          {{item.title}}
        </view>
        <view class="project-item-tags">
          <view
            wx:if="{{item.promotion}}"
            class="project-item-price-active"
          >¥{{item.price}}</view>
          <view
            wx:if="{{!item.promotion}}"
            class="project-item-text"
          >¥{{item.price}}</view>
          <view
            wx:if="{{item.notice}}"
            class="project-item-notice"
          >{{item.notice}}</view>
          <view class="project-item-text">
            {{item.level}}
          </view>
          <view class="project-item-user">
            <image
              class="project-item-icon"
              src="../../resources/user.png"
            />
            {{item.sales}}
          </view>
        </view>
      </view>
    </view>
  </view>
</block>