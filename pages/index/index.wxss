/* 头部输入框 */
.header{
  position: relative;
 
}
.header-input{
  line-height: 72rpx;
  margin: 22rpx 36rpx 14rpx 36rpx;
  border-radius: 26rpx;
  border:1rpx solid #D9DDE1;
  padding: 0 36rpx;
  text-align: center;
  font-size: 26rpx;
}
.header-input-placeholder{
  color: rgba(133,133,133,0.60);
}
.header-input-icon{
  position: absolute;
  top:17rpx;
  left: 50%;
  transform: translateX(-184rpx);
  color: rgba(133,133,133,0.60);
}
/* 头部导航 */
.navigator{
   display: flex;
   line-height: 112rpx;
   margin-bottom: 6rpx;
   
}
.navigator-item{
  position: relative;
  top:0;
  flex: 1;
  text-align: center;
  vertical-align: middle;
  font-size: 32rpx;
  color: #2B333B;
}
.navigator-img{
  position: relative;
  top: 6rpx;
  width: 36rpx;
  height:36rpx;
}
.navigator-acitve {
  position: absolute;
  width: 32rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: #F01414;
  left: 90rpx;
  bottom: 20rpx; 
}
.navigator-active-recommend {
  background: #F01414;
}
.navigator-active-activity {
  background: #FA58F4;
}
.navigator-active-path {
  background: #8000FF;
}
.navigator-active-project {
  background: #B18904;
}
/* 推荐模块 */
/* 幻灯片 */
.swiper{
  height: 234rpx;
}
.swiper-item {
  box-sizing: border-box;
  padding: 0 6rpx;

}
.swiper-image {
  width: 708rpx;
  height: 234rpx;
  border-radius: 12rpx;
}
/* 实战推荐 */
.project{
  margin: 32rpx 0 0 40rpx;
}
.project-title-item{
  height: 32rpx;
 
  margin-bottom:20rpx;
}
.project-title{
  float: left;
 line-height: 32rpx;
 font-size: 28rpx;
 color: #2B333B;
 font-weight: bold;
}
.project-title-gray{
  height: 25rpx;
  width: 28rpx;
  margin-right: 30rpx;
  float: right;
}
.project-item{
  margin-bottom:20rpx;
  display: flex;
}
.project-item-pic{

  width: 208rpx;
  height: 136rpx;
  border-radius: 12rpx;
}
.project-item-content{
  border-bottom: 1rpx solid #D9DDE1;
  margin-left: 24rpx;
  margin-right: 40rpx;
  flex: 1;
}
.project-item-title {
  line-height: 40rpx;
  font-size: 32rpx;
  color: #2B333B;
  font-weight: bold;
}

.project-item-tags {
  width: 300rpx;
  float: left;
  flex: 1;
  line-height: 32rpx;
  margin-top: 12rpx;
  font-size: 24rpx;
}
.project-item-tags view {
  float: left;
  margin-right: 18rpx;
}
/* .project-item-text {
  color: #71777D;
} */
.project-item-price-active {
  color:#eb0e45;
  font-weight: bold;
}
.project-item-text{
  color:#eb0e45;
}
.project-item-notice {
  background: rgba(242,13,13,0.10);
  border-radius: 4rpx;
  font-size: 20rpx;
  color: #F20D0D;
}
.project-item-user {
  line-height: 32rpx;
  color: #71777D;
  font-size: 24rpx;
}
.project-item-icon {
  position: relative;
  top: 2rpx;
  left: 4rpx;
  width: 22rpx;
  height: 22rpx;
}
/* 活动模块 */
.activity-item{
  width: 100%;
}
 